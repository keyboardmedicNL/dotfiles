# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

#order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "ethernet tun0"
order += "ethernet proton0"
order += "battery all"
order += "disk /"
order += "disk /mnt/HD\ Seagate 4TB"
order += "cpu_usage"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

ipv6 {
        format_up = "IPV6 %ip"
        format_down = ""
}

wireless _first_ {
        format_up = "WIR:%quality %essid %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "ETH: %ip"
        format_down = ""
}

ethernet tun0 {
        format_up = "OVPN: %ip"
        format_down = ""
}

ethernet proton0 {
        format_up = "PRTN: %ip"
        format_down = "PROTON DOWN"
}

battery all {  
    format = "%status %percentage %remaining"
    format_down = "" 
}  

disk "/" {
        format = "DSK %avail"
}

disk "/mnt/HD\ Seagate\ 4TB" {
        format = "4TB %avail"
}

cpu_usage {
        format = "CPU %usage"
        max_threshold = 80
}

load {
        format = "LO %1min"
        format_above_threshold = "Lo %1min"
}

memory {
        format = "MEM %used/%total"
        threshold_degraded = "1G"
        format_degraded = "Mem < %available"
}

volume master {
        format = "VOL %volume"
        format_muted = "MUTED (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}


tztime local {
        format = "%Y-%m-%d %a %H:%M"
}
